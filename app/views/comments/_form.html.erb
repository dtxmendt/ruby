
<%= form_for [@post, @post.comments.build] ,remote: true do |form| %>
  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_field :content, placeholder: 'Add a comment...', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "Comment it", class: "btn btn-danger", data: { "disable-with": "Comment is saving..." }  %>
  </div>
<% end %>



<%= form_for [@post, @post.comments.build] do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_field :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "Comment it", class: "btn btn-danger", data: { "disable-with": "Comment is saving..." } %>
  </div>
<% end %>
